@page "{id}"
@model SRDev.GestaoClientes.Web.Pages.Clientes.ExcluirModel
@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2 class="text-danger">Excluir Cliente</h2>
<p>Tem certeza de que deseja excluir o cliente <strong>@Model.Cliente.Nome</strong>?</p>

<form method="post">
    <input type="hidden" asp-for="Cliente.Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-page="/Clientes/Index" class="btn btn-secondary">Cancelar</a>
</form>
