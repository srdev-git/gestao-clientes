@model SRDev.GestaoClientes.Web.Models.ClienteEditarViewModel

<table class="table">
    <thead>
        <tr>
            <th>Endereço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Logradouros.Count; i++)
        {
            <tr>
                <td>
                    <input asp-for="Logradouros[i].Endereco" class="form-control" required />
                    <input type="hidden" asp-for="Logradouros[i].Id" />
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm" onclick="removerEndereco(@i)">Remover</button>
                </td>
            </tr>
        }
    </tbody>
</table>
